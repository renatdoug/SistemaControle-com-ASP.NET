@model IEnumerable<SistemaControle.Models.Grupos>

@{
    ViewBag.Title = "Disciplinas";
}

<h2>Lista de Disciplinas</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayForModel("Professor")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Professor.NomeCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GrupoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.GrupoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GrupoId })
        </td>
    </tr>
}

</table>
